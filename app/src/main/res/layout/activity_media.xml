<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.android.androidtraining.MediaApp.MediaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_release"
            style="@style/FontColor"
            android:textAllCaps="false"
            android:onClick="release"/>

        <Button
            android:id="@+id/button_destroy_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_release_service"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="destroyService"/>

        <Button
            android:id="@+id/button_stop_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_media_stop_foreground"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="stopForegroundService"/>

        <Button
            android:id="@+id/button_raw_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_media_raw"
            style="@style/FontColor"
            android:textAllCaps="false"
            android:onClick="playRaw"/>

        <Button
            android:id="@+id/button_uri_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontColor"
            android:textAllCaps="false"
            android:text="@string/button_media_uri"
            android:onClick="playURI"/>

        <Button
            android:id="@+id/button_url_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontColor"
            android:textAllCaps="false"
            android:text="@string/button_media_url"
            android:onClick="playURL"/>

        <Button
            android:id="@+id/button_media_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FontColor"
            android:text="@string/button_media_service"
            android:textAllCaps="false"
            android:onClick="playViaService"/>

        <Button
            android:id="@+id/button_media_foreground_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_media_foreground_service"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="playViaForegroundService"/>

        <Button
            android:id="@+id/button_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_record"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="recordThis"/>

        <Button
            android:id="@+id/button_camera_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_camera_app"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="launchCameraApp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_video_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_video_capture"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="launchVideoApp"/>

        <Button
            android:id="@+id/button_print_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_print_image"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="doPhotoPrint"/>

        <Button
            android:id="@+id/button_print_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_print_document"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="doWebViewPrint"/>

        <Button
            android:id="@+id/button_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_load_bitmap"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="loadBitmaps"/>

        <Button
            android:id="@+id/button_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_viewpager"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="startViewPagerActivity"/>

        <Button
            android:id="@+id/button_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_grid_view"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="startGridViewActivity"/>

        <Button
            android:id="@+id/button_opengl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGL"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="startOpenGLActivity"/>

    </LinearLayout>

</LinearLayout>
