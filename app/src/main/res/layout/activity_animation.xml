<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    tools:context="com.example.android.androidtraining.AnimationActivity">

    <LinearLayout
        android:id="@+id/master_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_title"/>

        <FrameLayout
            android:id="@+id/scene_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <include layout="@layout/a_scene"/>

        </FrameLayout>

        <Button
            android:id="@+id/button_start_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/button_start_animation"
            android:textAllCaps="false"
            style="@style/FontColor"
            android:onClick="animateScene"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_add_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/master_layout"
        android:text="@string/button_add_textView"
        android:textAllCaps="false"
        style="@style/FontColor"
        android:onClick="addTextView"/>

    <FrameLayout
        android:id="@+id/scene_root2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/button_add_textView">

        <include layout="@layout/add_textview" />

    </FrameLayout>

    <Button
        android:id="@+id/button_remove_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_remove_me"
        android:textAllCaps="false"
        style="@style/FontColor"
        android:onClick="removeMe"/>


</RelativeLayout>



